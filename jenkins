pipeline {
    agent any
    tools {
        nodejs 'NodeJS'  // NodeJS tool configured in Jenkins
    }
    stages {

        stage('Checkout') {
            steps {
                echo 'Checking out from Git repository'
                git branch: 'master', url: 'https://github.com/mudunuri010/git-documentation.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Installing dependencies and building the application'
                bat 'npm install'
                bat 'npx next dev'  // run Next.js locally via npx
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests'
                // bat 'npx jest'  // optional if you have tests
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application'
                // Add deploy commands here
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}

